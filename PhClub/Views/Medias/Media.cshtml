
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = @Model.title;
}

<h2>@Model.title</h2>
<br>

<div class="medias" >

    @if (!string.IsNullOrEmpty(@Model.ImagePath))
    {

        
        @*<div style="float: none; margin: 10px 10px 25px 25px; height: 100px; width:150px">*@
            <div id="imageContainer">
                @*@Html.Raw(Model.ImagePath)*@
                <img src="~/Images/@Html.Raw(Model.ImagePath)" style='height: 100%; width: 100%;' />
            </div>
        @*</div>*@
    }

        <p>
            @Html.Raw(Model.description)
            
        </p>
            @if (!string.IsNullOrEmpty(Model.VideoLink))
            {
                 <iframe src=@Html.Raw(Model.VideoLink) width="560" height="315" frameborder="1" align="middle" display:block style="margin:auto auto 30px auto"></iframe>
            }

    <p>
        @Html.Raw(Model.body)
    </p>

    <table class="customtable" >
        <tr>
            <th>
                <h5><a href=@Url.Action("SearchMedia", new { searchString = @Html.Raw(Model.TagsEnum) })>@Model.TagsEnum</a></h5>
                
            </th>
            <th>
                <h5><i>@Html.Raw(Model.NewsDate) </i></h5> 
            </th>
            @*<th>
                <h5>Просмотров:</h5>
            </th>*@
            <th>
                <h5> <a href="@Html.Raw(Model.Source)">Источник</a></h5>
            </th>
        </tr>
    </table>
</div>


