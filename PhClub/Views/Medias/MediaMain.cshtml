@*@model PhClub.Models.MediaViewModel*@
@model IEnumerable<PhClub.Models.Media>
@{
    ViewBag.Title = "Результат фильтра";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@foreach (var b in Model)
{ 
    <div id="medias" style="border-bottom-color:grey">     
        @if (!string.IsNullOrEmpty(b.ImagePath))
        {
        <div style="float: right; margin: 10px 10px 25px 25px; height: 100px; width:150px">
            <div id="imageContainer">
                @*@Html.Raw(Model.ImagePath)*@
                <img src="~/Images/@Html.Raw(b.ImagePath)" style='height: 100%; width: 100%;' />
            </div>
        </div>
        }

         <p>
             <h3> <a href=@Url.Action("Media", new { id = b.Id }) >@b.title </a></h3>
            @b.description
        </p>
        <table class="customtable">
            <tr>
                <th>
                    <h5><a href=@Url.Action("SearchMedia", new { searchString = @Html.Raw(b.TagsEnum) })>@Html.Raw(b.TagsEnum)</a> </h5>

                </th>
                @*<th>
                    Добавил:
                </th>*@
                <th>
                    <h5><i>@Html.Raw(b.NewsDate) </i></h5>
                </th>
                @*<th>
                    <h5>Просмотров:</h5>
                </th>*@
                @*<th>
                    <h5>Комментарии:</h5>
                </th>*@
            </tr>
        </table>
    </div>
}




